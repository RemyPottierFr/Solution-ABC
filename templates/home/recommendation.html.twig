{% extends 'base.html.twig' %}

{% block title %}Recommandations
{% endblock %}
{% block body %}
    <section class="bg-light py-5 font-lato container-fluid">
            <h2 class="text-center mb-5 font-weight-bold">Toutes les recommandations du r√©seau ABC</h2>
            <div class="row">
                {% for recommendation in recommendations %}
                    <div class="card_reco col-10 col-lg-8 d-flex flex-column flex-md-row my-3 w-100 justify-content-center mx-auto">
                        <div class="d-flex flex-column text-center justify-content-center">
                            <img class="recommendation-list_profile" src="{{ recommendation.owner.profileImage }}"
                                 alt="photo de profile/entreprise" />
                            <h5 class="mt-3">
                                {{ recommendation.owner.name }}
                            </h5>
                        </div>
                        <div class="d-none d-md-flex align-items-center h-75 mb-auto px-2 col-2">
                            <img src="/images/arrowRightMagenta.png" class="arrow-right--magenta" />
                        </div>
                        <div class="d-md-none my-3">
                            <h4 class="text-magenta">Recommande</h4>
                        </div>
                        <div class="d-flex flex-column text-center justify-content-center">
                            <img class="recommendation-list_profile" src="{{ recommendation.target.profileImage }}"
                                 alt="photo de profile/entreprise" />
                            <h5 class="mt-2">
                                {{ recommendation.clientName }}
                            </h5>
                        </div>
                        {% if recommendation.displayClient %}
                            <div class="d-none d-md-flex align-items-center h-75 mb-auto px-2">
                                <img src="/images/arrowRightMagenta.png" class="arrow-right--magenta" />
                            </div>
                            <div class="d-flex flex-column text-center h-75 justify-content-center">
                                <h3 class="text-nowrap text-magenta">Pour le client</h3>
                                <h5>{{ recommendation.infoClient }}</h5>
                                <h5 class="font-weight-bold">{{ recommendation.clientName }}</h5>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <nav class="paginate mt-5" aria-label="Page navigation">
                {{ knp_pagination_render(recommendations) }}
            </nav>
    </section>
{% endblock %}
