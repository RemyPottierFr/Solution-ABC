{% extends 'base.html.twig' %}

{% block title %}Métier index
{% endblock %}

{% block body %}
    <h1 class="memberList__title">Index des métier</h1>

    <table class="table container">
        <thead>
        <tr>
            <th>Nom</th>
            <th class="text-right">
                <a class="btn btn-add mx-2" href="{{ path('job_new', {'fallback': 'job_index'}) }}">
                    <span>Ajouter</span>
                    <i class="fas fa-plus"></i>
                </a>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.nameJob }}</td>
                <td class="text-right d-flex justify-content-end align-items-center">
                    <a class="mr-2 text-magenta text-nowrap" href="{{ path('job_edit', {'id': job.id}) }}">
                        <i class="fas fa-pen"></i>
                        <span>Édition</span>
                    </a>
                    {{ include('job/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
