{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
<div class="container">
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Nom et prénom</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>Entreprise</th>
                <td>{{ member.company }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ member.phonenumber }}</td>
            </tr>
            <tr>
                <th>Adresse de l'entreprise</th>
                <td>{{ member.workingLocation }}</td>
            </tr>
            <tr>
            <tr>
                <th>Adresse de l'entreprise</th>
                <td>{{ member.postCode }}</td>
            </tr>
            <tr>
                <th>Adresse de l'entreprise</th>
                <td>{{ member.city }}</td>
            </tr>
                <th>Image de profile</th>
                <td><img class="image_profile" src="{{ member.profileImage }}" alt="photo de profil/entreprise"/></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}">Revenir à la liste</a>

    <a href="{{ path('member_edit', {'id': member.id}) }}">Mise à jour</a>

    {{ include('member/_delete_form.html.twig') }}
</div>    
{% endblock %}
