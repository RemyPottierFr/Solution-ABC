<form method="post" action="{{ path('recommendation_delete', {'id': recommendation.id}) }}"
      onsubmit="return confirm('Voulez vous vraiment supprimer cet item ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recommendation.id) }}">
    <button class="btn btn-danger my-2"><i class="fas fa-trash-alt"></i> Supprimer</button>
</form>
