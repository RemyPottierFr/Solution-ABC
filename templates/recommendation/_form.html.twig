{{ form_start(form) }}
<div class="row formulaire_div">
    <div class="form-group col-12 col-xl-6 mx-auto">
        {{ form_label(form.clientName, 'Pour le client :') }}
        {{ form_widget(form.clientName, {'attr':{'class':'form-control border-magenta'}}) }}
    </div>
</div>
<div class="row formulaire_div">
    <div class="form-group col-12 col-xl-6 mx-auto">
        {{ form_label(form.infoClient, 'Contact :') }}
        {{ form_widget(form.infoClient, {'attr':{'class':'form-control border-magenta'}}) }}
    </div>
</div>
<div class="row formulaire_div">
    <div class="form-group col-12 col-xl-6 mx-auto">
        {{ form_label(form.comment, 'Votre commentaire :') }}
        {{ form_widget(form.comment, {'attr':{'class':'form-control border-magenta'}}) }}
    </div>
</div>
<div class="row formulaire_div">
    <div class="form-group col-12 col-xl-6 mx-auto">
        {{ form_widget(form.displayClient) }}
    </div>
</div>
<div class="row">
    <button type="submit" class="btn btn-dark mx-auto">{{ button_label|default('Envoyer') }}</button>
</div>
{{ form_end(form) }}
