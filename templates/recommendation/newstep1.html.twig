{% extends 'base.html.twig' %}

{% block title %}Nouvelle recommandation{% endblock %}

{% block body %}
    <div class="bg-light py-5">
        <div class="container">
            <h1 class="text-center">Créer une recommandation</h1>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <section class="form-section">
                {{ form_widget(form._token) }}
                <div class="row formulaire_div">
                    <div class="form-group col-12 col-xl-6 mx-auto">
                        <label class="font-weight-bold my-2 form--label">
                            {{ form.target.vars.label }}
                        </label>
                        {{ form_widget(form.target, {'attr':{'class':'form-control border-magenta'}}) }}
                    </div>
                </div>
            </section>
            <div class="w-100 d-flex justify-content-end">
                <button type="submit" class="btn btn-add">{{ button_label|default('Suivant') }}</button>
            </div>
            {{ form_end(form, {'render_rest': false}) }}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('recommendation_list') }}">Retour à la liste</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
