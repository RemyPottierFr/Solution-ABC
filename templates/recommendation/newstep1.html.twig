{% extends 'base.html.twig' %}

{% block title %}Nouvelle recommandation{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3">Créer une recommandation</h1>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form._token) }}
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.target, 'Je recommande :') }}
                {{ form_widget(form.target, {'attr':{'class':'form-control border border-dark'}}) }}
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-dark mx-auto">{{ button_label|default('Suivant') }}</button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('recommendation_list') }}">Retour à la liste</a>
        {% endif %}
    </div>
{% endblock %}
