{% extends 'base.html.twig' %}

{% block title %}Nouvelle recommandation{% endblock %}

{% block body %}
    <div>
        <div class="membresPage__head">
            <span class="membresPage__head-title">Créer une recommendation</span>
        </div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form._token) }}
        <div class="row formulaire_div mt-5">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.prestations, 'Pour le(s) prestation(s) :') }}
                {{ form_widget(form.prestations, {'attr':{'class':'form-control border-magenta'}}) }}
            </div>
        </div>
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.clientName, 'Pour le client :') }}
                {{ form_widget(form.clientName, {'attr':{'class':'form-control border-magenta'}}) }}
            </div>
        </div>
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.infoClient, 'Contact :') }}
                {{ form_widget(form.infoClient, {'attr':{'class':'form-control border-magenta'}}) }}
            </div>
        </div>
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.comment, 'Votre commentaire :') }}
                {{ form_widget(form.comment, {'attr':{'class':'form-control border-magenta'}}) }}
            </div>
        </div>
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_widget(form.displayClient) }}
            </div>
        </div>
        <div class="row mb-5">
            <button type="submit" class="btn btn-dark mx-auto">{{ button_label|default('Envoyer') }}</button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('recommendation_newstep1') }}">Précédent</a>
        {% endif %}
    </div>
{% endblock %}
