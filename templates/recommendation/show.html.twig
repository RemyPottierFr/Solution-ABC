{% extends 'base.html.twig' %}

{% block title %}Recommendation{% endblock %}

{% block body %}
<div class="membresPage__head">
    <span class="membresPage__head-title">Recommendation n°{{ recommendation.id }}</span>
</div>
<div class="container my-5">
    <div class="row formulaire_div">
        <div class="form-group col-12 col-xl-6 mx-auto">
            <h5>Nom du client :</h5>
            {{ recommendation.clientName }}
        </div>
    </div>
    <div class="row formulaire_div">
        <div class="form-group col-12 col-xl-6 mx-auto">
            <h5>Email du client :</h5>
            {{ recommendation.infoClient }}
        </div>
    </div>
    <div class="row formulaire_div">
        <div class="form-group col-12 col-xl-6 mx-auto">
            <h5>Commentaire :</h5>
            {{ recommendation.comment }}
        </div>
    </div>
    <div class="row formulaire_div">
        <div class="form-group col-12 col-xl-6 mx-auto">
            {% if recommendation.displayClient %}
                <h6>Le client est affiché sur la recommandation.</h6>
            {% else %}
                <h6>Le client est masqué sur la recommandation.</h6>
            {% endif %}
        </div>
    </div>
    <div class="row">
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-add mr-auto"
               href="{{ path('recommendation_index') }}">
                <span><i class="fas fa-angle-left"></i> Retour à la liste</span>
            </a>
        {% endif %}
        <a class="btn btn-add"
           href="{{ path('recommendation_little_edit', {id:recommendation.id}) }}">
            <span>éditer <i class="far fa-edit"></i></span>
        </a>
    </div>
    {{ include('recommendation/_delete_form.html.twig') }}
</div>
{% endblock %}
