{% extends 'base.html.twig' %}

{% block title %}Recommendation{% endblock %}

{% block body %}
    <h1>Recommendation</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ recommendation.id }}</td>
        </tr>
        <tr>
            <th>Commentaires :</th>
            <td>{{ recommendation.comment }}</td>
        </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('recommendation_index') }}">Retour à la liste</a>
    {% endif %}
    <a href="{{ path('recommendation_edit', {'id': recommendation.id}) }}">Édition</a>
    {{ include('recommendation/_delete_form.html.twig') }}
{% endblock %}
