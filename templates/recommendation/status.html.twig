{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-3">Actualiser le statut de votre recommendation</h1>
        {{ form_start(form) }}
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form, 'Valider la recommendation en cochant la case si dessous') }}
                {{ form_widget(form, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="row formulaire_div">
            <div class="form-group col-12 col-xl-6 mx-auto">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        </br>
        <div class="row">
            <button type="submit" class="btn btn-dark mx-auto">{{ button_label|default('Actualiser') }}</button>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('recommendation_list') }}">Retour Ã  la liste</a>
        {% endif %}
    </div>
    {{ form_end(form) }}
{% endblock %}
